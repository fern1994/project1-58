@model IEnumerable<AntiDrugWeb4.Models.news>

@{
    ViewBag.Title = "Index";
}

<h2>News</h2>

<p style="font-size:15px">
    @Html.ActionLink("Create news", "Create")

    @using (Html.BeginForm("Index", "news", FormMethod.Get))
    {
    <p style="font-size:15px">
        Patient Name: @Html.TextBox("SearchString") <br />
        <input type="submit" value="Filter" class="btn btn-warning" style="font-size:15px"/>
    </p>
    } <br />
</p>
<table class="table table-hover" style="font-size:15px">
    <tr>
        <th>
           News Titile
        </th>
        <th>
            News Details
        </th>
        <th>
            News Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.newsTitile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.newsDetails)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.newsDate)
        </td>
        <td style="font-size:15px">
            @Html.ActionLink("Edit", "Edit", new { id=item.newsID }) |
            @Html.ActionLink("Details", "Details", new { id=item.newsID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.newsID })
        </td>
    </tr>
}

</table>
