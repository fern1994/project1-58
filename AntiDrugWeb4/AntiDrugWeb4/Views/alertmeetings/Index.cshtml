@model IEnumerable<AntiDrugWeb4.Models.alertmeeting>

@{
    ViewBag.Title = "Index";
}

<h2>Meeting patient</h2>

<p style="font-size:15px">
    @Html.ActionLink("Create new meeting", "Create")

    @using (Html.BeginForm("Index", "alertmeetings", FormMethod.Get))
    {
    <p style="font-size:15px"> 
        Patient Name: @Html.TextBox("SearchString") <br />
        <input type="submit" value="Filter" class="btn btn-warning" style="font-size:15px"/>
    </p>
    } <br />
</p>
<table class="table table-hover" style="font-size:15px">
    <tr>
        <th>
           Meeting Date
        </th>
        <th>
            Meeting Title
        </th>
        <th>
            Meeting Detail
        </th>
        <th>
            Meeting Summary
        </th>
        <th>
            Meeting By StaffID
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.meetingDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.meetingTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.meetingDetail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.meetingSummary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.meetingByStaffID)
        </td>
        <td style="font-size:15px">
            @Html.ActionLink("Edit", "Edit", new { id=item.alertID }) |
            @Html.ActionLink("Details", "Details", new { id=item.alertID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.alertID })
        </td>
    </tr>
}

</table>
