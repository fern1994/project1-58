<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fern_computer.antidrugvolunteer.Law">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherIconImageView"
        android:src="@drawable/learn"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="กฎหมาย"
        android:textSize="30dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ยาเสพติดให้โทษประเภท1"
        android:textSize="20dp"
        android:id="@+id/type1"
        android:background="#12f50e"
        android:textColor="#ffffff"
        android:layout_below="@+id/weatherIconImageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ยาเสพติดให้โทษประเภท2"
        android:textSize="20dp"
        android:id="@+id/type2"
        android:layout_below="@+id/type1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/type1"
        android:background="#057cfb"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ยาเสพติดให้โทษประเภท3"
        android:textSize="20dp"
        android:id="@+id/type3"
        android:layout_below="@+id/type2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/type2"
        android:background="#fa9c04"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ยาเสพติดให้โทษประเภท4"
        android:textSize="20dp"
        android:id="@+id/type4"
        android:layout_below="@+id/type3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#fb0875"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ยาเสพติดให้โทษประเภท 5"
        android:id="@+id/type5"
        android:layout_below="@+id/type4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/type4"
        android:textSize="20dp"
        android:background="#8608fb"
        android:textColor="#ffffff" />
</RelativeLayout>
