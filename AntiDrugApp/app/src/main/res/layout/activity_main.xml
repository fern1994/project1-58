<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fern_computer.antidrugvolunteer.Main">

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/weatherIconImageView"
    android:src="@drawable/logo1"
    android:layout_marginBottom="30dp"
    android:layout_below="@+id/textView"
    android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="หน้าหลัก"
        android:textSize="30dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ความรู้ทั่วไป"
        android:textSize="20dp"
        android:id="@+id/knowlegde"
        android:background="#12f50e"
        android:textColor="#ffffff"
        android:layout_below="@+id/weatherIconImageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ข่าวสาร"
        android:textSize="20dp"
        android:id="@+id/news"
        android:layout_below="@+id/knowlegde"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/knowlegde"
        android:background="#057cfb"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="คัดกรองผู้ป่วย"
        android:textSize="20dp"
        android:id="@+id/screening"
        android:layout_below="@+id/news"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/news"
        android:background="#fa9c04"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ออกจากระบบ"
        android:textSize="20dp"
        android:id="@+id/logout"
        android:background="#fb0875"
        android:textColor="#ffffff"
        android:layout_below="@+id/calendar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ปฏิทิน"
        android:id="@+id/calendar"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/screening"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#f7079f" />

</RelativeLayout>
